<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/widget_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="12dp"
  android:background="@drawable/widget_background_transparent"
>
  <!-- Header with title and refresh button -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginBottom="18dp"
  >
    <TextView
      android:id="@+id/widget_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Screen Time"
      android:textSize="14sp"
      android:textStyle="bold"
      android:textColor="#FFFFFF"
    />

    <ImageButton
      android:id="@+id/refresh_button"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/ic_refresh"
      android:background="?android:attr/selectableItemBackgroundBorderless"
      android:contentDescription="Refresh"
      android:scaleType="fitCenter"
    />
  </LinearLayout>

  <!-- Total Screen Time - Compact -->
  <TextView
    android:id="@+id/total_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0h 0m"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="24dp"
  />

  <!-- Top 3 Apps - Compact List -->
  <!-- App 1 -->
  <LinearLayout
    android:id="@+id/app1_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
  >
    <ImageView
      android:id="@+id/app1_icon"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:src="@android:drawable/sym_def_app_icon"
    />

    <TextView
      android:id="@+id/app1_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="10dp"
      android:text="App 1"
      android:textSize="13sp"
      android:textColor="#FFFFFF"
      android:maxLines="1"
      android:ellipsize="end"
    />

    <TextView
      android:id="@+id/app1_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0m"
      android:textSize="12sp"
      android:textColor="#B3FFFFFF"
      android:layout_marginStart="8dp"
    />
  </LinearLayout>

  <!-- App 2 -->
  <LinearLayout
    android:id="@+id/app2_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
  >
    <ImageView
      android:id="@+id/app2_icon"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:src="@android:drawable/sym_def_app_icon"
    />

    <TextView
      android:id="@+id/app2_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="10dp"
      android:text="App 2"
      android:textSize="13sp"
      android:textColor="#FFFFFF"
      android:maxLines="1"
      android:ellipsize="end"
    />

    <TextView
      android:id="@+id/app2_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0m"
      android:textSize="12sp"
      android:textColor="#B3FFFFFF"
      android:layout_marginStart="8dp"
    />
  </LinearLayout>

  <!-- App 3 -->
  <LinearLayout
    android:id="@+id/app3_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
  >
    <ImageView
      android:id="@+id/app3_icon"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:src="@android:drawable/sym_def_app_icon"
    />

    <TextView
      android:id="@+id/app3_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="10dp"
      android:text="App 3"
      android:textSize="13sp"
      android:textColor="#FFFFFF"
      android:maxLines="1"
      android:ellipsize="end"
    />

    <TextView
      android:id="@+id/app3_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0m"
      android:textSize="12sp"
      android:textColor="#B3FFFFFF"
      android:layout_marginStart="8dp"
    />
  </LinearLayout>
</LinearLayout>
